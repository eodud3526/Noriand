<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <Button
            android:id="@+id/startDate"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:text="시작 날짜" />

        <TextView
            android:text=" ~ "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/startDate"
            android:id="@+id/text"/>

        <Button android:layout_height="wrap_content"
            android:id="@+id/endDate"
            android:layout_width="150dip"
            android:layout_toRightOf="@+id/text"
            android:text="마지막 날짜"
            android:inputType="date"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchButton"
            android:layout_toRightOf="@+id/endDate"
            android:text="조회"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="활동 거리 합계"
            android:layout_below="@id/startDate"/>

        <ListView
            android:id="@+id/lv_action_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eee"
            android:dividerHeight="0dp"
            android:divider="@color/color_transparent"
            android:listSelector="@color/color_transparent"
            android:scrollbarThumbVertical="@color/color_purple"
            android:scrollbarSize="2dp"
            android:overScrollMode="never"/>

</RelativeLayout>
