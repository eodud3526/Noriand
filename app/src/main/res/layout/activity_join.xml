<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:gravity="center"
        android:text="회원가입" />
    <Button
        android:id="@+id/btn_join_close"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="48dp"
        android:layout_alignParentRight="true"
        android:stateListAnimator="@null"
        android:background="@drawable/selector_btn_close"/>
    <EditText
        android:id="@+id/et_join_email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:maxLength="50"
        android:textCursorDrawable="@drawable/bgr_shape_cursor"
        android:cursorVisible="true"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="14dp"
        android:text=""
        android:imeOptions="actionNext"
        android:background="@drawable/selector_btn_common_text_box_gray" />
    <EditText
        android:id="@+id/et_join_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="148dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:maxLength="50"
        android:textCursorDrawable="@drawable/bgr_shape_cursor"
        android:cursorVisible="true"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="14dp"
        android:text=""
        android:imeOptions="actionDone"
        android:background="@drawable/selector_btn_common_text_box_gray" />
    <EditText
        android:id="@+id/et_join_repassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="196dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:maxLength="50"
        android:textCursorDrawable="@drawable/bgr_shape_cursor"
        android:cursorVisible="true"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="14dp"
        android:text=""
        android:imeOptions="actionNext"
        android:background="@drawable/selector_btn_common_text_box_gray" />
    <EditText
        android:id="@+id/et_join_phone_number"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="244dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:hint="휴대전화번호"
        android:inputType="number"
        android:maxLength="13"
        android:digits="0123456789"
        android:textCursorDrawable="@drawable/bgr_shape_cursor"
        android:cursorVisible="true"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="14dp"
        android:text=""
        android:imeOptions="actionDone"
        android:background="@drawable/selector_btn_common_text_box_gray" />

    <Button
        android:id="@+id/btn_join"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="304dp"
        android:textSize="14dp"
        android:textColor="#fff"
        android:background="@drawable/btn_gray"
        android:stateListAnimator="@null"
        android:text="가입하기"/>
</RelativeLayout>