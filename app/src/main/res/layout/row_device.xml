<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <RelativeLayout
        android:id="@+id/rl_row_device"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:background="@drawable/bgr_shape_common_white_rect_corner">
        <ImageView
            android:id="@+id/iv_row_device_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/tv_row_device_name"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="14dp"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            />
        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true">
            <View
                android:id="@+id/v_row_device_battery"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="45dp"
                android:background="@drawable/ico_battery_04"/>
            <TextView
                android:id="@+id/tv_row_device_period"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:textSize="10dp"
                android:textColor="#6b37ff"
                android:layout_marginTop="40dp"
                android:text="0분마다"/>
            <View
                android:id="@+id/v_row_device_safe_zone"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/selector_btn_safe_zone"/>
            <View
                android:id="@+id/v_row_device_on"
                android:layout_width="25dp"
                android:layout_height="18dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="0dp"
                android:background="@drawable/ico_is_device_on"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="80dp"
            android:background="#eee"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="80dp"
            android:orientation="horizontal"
            android:weightSum="4">
            <RelativeLayout
                android:id="@+id/rl_row_device_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <View
                    android:layout_width="16dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:duplicateParentState="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/selector_btn_device_marker"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_row_device_star"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:duplicateParentState="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/selector_btn_star"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_row_device_people"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <View
                    android:layout_width="33dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="9dp"
                    android:duplicateParentState="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/selector_btn_people"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_row_device_setting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:duplicateParentState="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/selector_btn_setting"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>